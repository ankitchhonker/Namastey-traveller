<% layout("/layouts/boilerplate") %>
<style>
    .review-card {
    border: 1px solid #ddd;
    border-radius: 10px;
    width: 70%;
    height: 7rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s;
  }

  .review-card:hover {
    transform: scale(1.05);
  }

  .review-card .card-body {
    padding: 20px;
  }

  .review-card .card-title {
    font-size: 1.2em;
    margin-bottom: 10px;
  }
  

  .review-card .card-text {
    font-size: 1em;
    color: #555;
  }

  .review-card .fa-star {
    color: #f39c12;
  }

  .review-card .review-delete {
    background: transparent;
    border: none;
    color: #dc3545;
    font-size: 1.2em;
    cursor: pointer;
  }

  .review-card .review-delete:hover {
    color: #c82333;
  }

  .rounded-rect {
  background: white;
  border-radius: 10px;
  box-shadow: 0 0 50px -25px black;
  }
   
  .flex-center {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  }
   
  .flex-center.left {
  left: 0px;
  }
   
  .flex-center.right {
  right: 0px;
  }
   
